<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fdfaf3"
    android:id="@+id/my_report"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/my_reports_top_menu"
        android:background="#f2f7fa"
        android:layout_width="fill_parent"
        android:layout_height="48dip" >

        <TextView
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:gravity="center"
            android:text="报工查询"
            android:textSize="20sp" />

        <Button
            android:textColor="@drawable/back_color_selector"
            android:layout_marginTop="9dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="8dip"
            android:background="@drawable/back_bg"
            android:onClick="back"
            android:text="@string/back" />
    </RelativeLayout>
    <ExpandableListView
        android:layout_below="@+id/my_reports_top_menu"
        android:id="@+id/my_reports_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:childDivider="#d1e5fe"
        android:childIndicatorLeft="0dp"
        android:divider="#CDC5BF"
        android:dividerHeight="1dp"
        android:groupIndicator="@null"
        android:scrollbarAlwaysDrawHorizontalTrack="true" />

</RelativeLayout>