<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_reports_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfaf3"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="#f2f7fa"
        android:layout_width="fill_parent"
        android:layout_height="48dip" >

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/button_my_reports_delete"
            android:textColor="@drawable/back_color_selector"
            android:layout_marginTop="9dip"
            android:layout_width="wrap_content"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_height="30dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/back_bg"
            android:text="@string/delete" />
        <TextView
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:gravity="center"
            android:text="@string/my_reports"
            android:textSize="20sp" />

        
    </RelativeLayout>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent">
    <ExpandableListView
        android:layout_above="@+id/button_my_reports_more"
        android:id="@+id/my_reports_listView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:childDivider="#d1e5fe"
        android:childIndicatorLeft="0dp"
        android:divider="#CDC5BF"
        android:dividerHeight="1dp"
        android:groupIndicator="@null"
        android:scrollbarAlwaysDrawHorizontalTrack="true"/>
    <Button
        android:layout_alignParentBottom="true"
        android:background="#00ffffff"
        android:textColor="@drawable/back_color_selector"
        android:text="@string/more"
        android:id="@+id/button_my_reports_more"
        android:layout_width="fill_parent"
        android:layout_height="40dip"/>
    </RelativeLayout>

</LinearLayout>